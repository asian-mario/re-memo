# Environment variables for local development
# Copy this file to .env and update the values as needed

# Database Configuration  
DB_HOST=postgres
DB_PORT=5432
DB_NAME=rememo
DB_USER=rememo_user
DB_PASSWORD=rememo_password

# LLM Configuration
LLM_PROVIDER=ollama  # ollama or openai
OLLAMA_URL=http://ollama:11434
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
DEFAULT_MODEL=gpt-4.1

# App Configuration
APP_HOST=0.0.0.0
APP_PORT=80
DEBUG=false
SECRET_KEY=your-secret-key-change-this

# AI Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
SYSTEM_PROMPT=You are a helpful AI assistant for journaling and self-reflection.
MAX_FACTS_PER_ENTRY=20

# Feature Flags
ENABLE_VOICE=true
MAX_ENTRY_LENGTH=10000
MAX_FACTS_PER_ENTRY=100

# Frontend Configuration (for local development)
VITE_API_BASE_URL=http://localhost:8080/api